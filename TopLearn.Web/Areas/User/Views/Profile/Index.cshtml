@using TopLearn.Utility.Convertor
@model TopLearn.DataLayer.Entities.User.User
@{
    ViewData["Title"] = "پروفایل کاربر";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            پنل کاربری
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fas fa-user-tie"></i> @Model.UserFristName </a></li>
            <li class="active">پروفایل</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">

        <div class="row">

            <div class="col-md-4">
                <!-- Widget: user widget style 1 -->
                <div class="box box-widget widget-user">
                    <!-- Add the bg color to the header using any of the bg-* classes -->
                    <div class="widget-user-header bg-black" style="background: url(/User/images/photo1.png) center center;">
                        <h3 class="widget-user-username">@Model.UserFristName  @Model.UserLastName</h3>

                    </div>
                    <div class="widget-user-image">
                        <img class="img-circle" src="~/PorojectImg/@(Model.UserImage)" alt="User Avatar">
                    </div>
                    <div class="box-footer" style="padding: 36px 30px 10px 30px;">
                        <div class="row">
                            <ul class="list-group list-group-unbordered">
                                <li class="list-group-item">
                                    <b>ایمیل</b> <a class="pull-left">@Model.UserEmail</a>
                                </li>
                                <li style="direction: ltr;" class="list-group-item">
                                    <b>تاریخ عضویت</b> <a class="pull-left">@Model.UserDateTime.ToShamsi()</a>
                                </li>
                                <li style="direction: ltr;" class="list-group-item">
                                    <b>تاریخ فعال سازی</b> <a class="pull-left">@Model.UserEmailConfigurationDateTime.ToShamsi()</a>
                                </li>

                                <li class="list-group-item">
                                    <b>نقش</b> <a class="pull-left">کاربر عادی</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.row -->
                    </div>
                </div>
                <!-- /.widget-user -->
            </div>


            <div class="col-md-8">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">

                        <li class="active"><a href="#settings" data-toggle="tab" aria-expanded="true">اطلاعات کاربری</a></li>
                    </ul>
                    <div class="tab-content">


                        <div class="tab-pane active" id="settings">
                            <form class="form-horizontal" asp-action="EditProfile">
                                <input type="hidden" asp-for="UserID" />
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">نام کاربری</label>
                                    <div class="col-sm-10">
                                        <input asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">نام</label>
                                    <div class="col-sm-10">
                                        <input asp-for="UserFristName" type="text" class="form-control" placeholder="نام">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail" class="col-sm-2 control-label">نام خانوادگی</label>
                                    <div class="col-sm-10">
                                        <input asp-for="UserLastName" type="text" class="form-control" placeholder="نام خانوادگی">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="inputExperience" class="col-sm-2 control-label">درباره من </label>
                                    <div class="col-sm-10">
                                        <textarea asp-for="UserAbout" maxlength="500" class="form-control" rows="5" placeholder="درباره من "></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputSkills" class="col-sm-2 control-label">تاریخ تولد</label>
                                    <div class="col-sm-10">
                                        <input asp-for="UserBirthday" type="text" class="form-control" placeholder="تاریخ تولد">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">تصویر</label>
                                    <div class="col-sm-10">
                                        <input asp-for="UserImage" type="file" class="form-control" />
                                    </div>
                                </div>
                                <div asp-validation-summary="All" class="text-error"></div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary btn-lg">ذخیره</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts {

}
